<section class="todoapp">
	<header class="header">
        <h1>Signup!</h1>
        <%= form_for(@user) do |f| %>
            <%= f.text_field :email, :class => "new-todo", :placeholder => "Register your email!!!" %>
            <%= f.text_field :password, :class => "new-todo", :placeholder => "Enter your password" %>
            <%= f.submit :style => "display: none" %>
        <% end %>


    </header>

	<footer class="footer">
	</footer>
</section>